generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model UpsellBlock {
  id              String   @id @default(cuid())
  shop            String
  name            String
  placement       String
  productHandles  String
  title           String   @default("Recommended for you")
  showCount       Int      @default(4)
  autoSlide       Boolean  @default(false)
  slideDuration   Int      @default(5)
  active          Boolean  @default(true)
  layout          String   @default("slider")
  columns         Int      @default(4)
  backgroundColor String   @default("#ffffff")
  textColor       String   @default("#000000")
  buttonColor     String   @default("#1a73e8")
  buttonText      String   @default("Add")
  borderRadius    Int      @default(8)
  padding         Int      @default(16)
  centerPadding   Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
