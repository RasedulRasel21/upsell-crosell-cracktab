generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model UpsellBlock {
  id              String   @id @default(cuid())
  shop            String
  name            String
  placement       String
  productHandles  String?  // Keep for backward compatibility
  collectionHandle String? // New field for collection-based upsells
  title           String   @default("Recommended for you")
  showCount       Int      @default(4)
  autoSlide       Boolean  @default(false)
  slideDuration   Int      @default(5)
  active          Boolean  @default(true)
  layout          String   @default("slider")
  columns         Int      @default(4)
  backgroundColor String   @default("#ffffff")
  textColor       String   @default("#000000")
  buttonColor     String   @default("#1a73e8")
  buttonText      String   @default("Add")
  borderRadius    Int      @default(8)
  padding         Int      @default(16)
  centerPadding   Boolean  @default(true)
  properties      String   @default("")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relationship to analytics
  analytics       UpsellAnalytics[]
}

model UpsellAnalytics {
  id              String   @id @default(cuid())
  shop            String
  upsellBlockId   String
  productId       String   // Shopify product ID
  variantId       String   // Shopify variant ID
  productName     String   // Product title for easy reference
  variantTitle    String?  // Variant title if different from product
  price           Float    // Product price at time of click
  placement       String   // Where the upsell was shown (checkout, cart, etc)
  customerHash    String?  // Anonymous customer identifier
  sessionId       String?  // Session identifier
  addedToCart     Boolean  @default(false) // Whether the click resulted in adding to cart
  createdAt       DateTime @default(now())

  // Relationship to upsell block
  upsellBlock     UpsellBlock @relation(fields: [upsellBlockId], references: [id], onDelete: Cascade)

  @@index([shop])
  @@index([upsellBlockId])
  @@index([createdAt])
  @@index([addedToCart])
}
